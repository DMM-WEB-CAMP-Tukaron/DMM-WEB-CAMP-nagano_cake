<h2>会員編集</h2>
<%= form_with model:@customer, local:true do |f| %>
  <div class="form-group">
    <h2>氏名</h2>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control last_name" %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control first_name" %>
    </div>
  <div class="form-group">
    <h2>カナ</h2>
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
  </div>
  <div class="form-group">
    <h2>郵便番号</h2>
    <%= f.label :postal_code %>
    <%= f.attachment_field :postal_code, class: "form-control-file postal_code" %>
  </div>
  <div class="form-group">
    <h2>住所</h2>
    <%= f.label :address %>
    <%= f.attachment_field :address, class: "form-control-file address" %>
  </div>
  <div class="form-group">
    <h2>電話番号</h2>
    <%= f.label :telephone_number %>
    <%= f.attachment_field :telephone_number, class: "form-control-file telephone_number" %>
  </div>
  <div class="form-group">
    <h2>メールアドレス</h2>
    <%= f.label :email %>
    <%= f.attachment_field :email, class: "form-control-file email" %>
  </div>
  <div class="form-group">
    <%= f.submit '編集内容を保存', class: 'btn btn-secondary' %>
    <%= link_to '退会', customer_unsubscribe_path ,class: "btn btn-outline-secondary" %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-lg-12">

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3 control-label">名前　（姓）</label>
                <div class="col-xs-3">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                </div>
                <label class="col-xs-1">（名）</label>
                 <div class="col-xs-3">
                   <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                 </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3 control-label">フリガナ（セイ）</label>
                <div class="col-xs-3">
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                </div>

                <label class="col-xs-1 control-label">(メイ)</label>
                <div class="col-xs-3">
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <%= f.label "メールアドレス" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3 control-label">郵便番号</label>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3 control-label">住所</label>
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3 control-label">電話番号</label>
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3">パスワード</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label class="col-xs-3">パスワード（確認用）</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <%= f.submit "Sign up" %>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "customers/shared/links" %>
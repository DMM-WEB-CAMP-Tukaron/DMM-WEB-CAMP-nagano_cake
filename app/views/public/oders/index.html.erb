<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>注文情報</h1>
      <%= form_with model: @oders, url: oders_path, local:true do |f| %>
      <div class="form-group">
      <!--お支払い情報-->
        お支払い方法<br>
        <label>
          <%= f.radio_button :billing_amount, 0, checked: "checked" %>クレジットカード<br>
        </label>
        <label>
          <%= f.radio_button :billing_amount, 1 %>銀行振り込み<br>
        </label>
      </div>
      <!--お届け先情報-->
        お届け先<br>
        <div class="ec-select-address">
          <table class="address-form-table">
            <tbody>
              <!--自宅-->
              <tr>
                <%= radio_button_tag :oder_address_type, "ご自身の住所", checked: true %>
                <%= f.label(:oder_address, "ご自身の住所") %>
                <p class="customer_address">
                  〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
                  <%= current_customer.last_name %> <%= current_customer.first_name %>
                </p>
              </tr>
              <!--登録した住所を選べるよ-->
              <tr>
                <%= radio_button_tag :oder_address_type, "登録済住所から選択" %>
                <%= f.label(:oder_address, "登録済住所から選択") %>
                <%= f.fields_for @addres do |t| %>
                <p class="registered-address">
                  <%= t.select(:id, current_customer.oders.map { |oder| [oder.full_address, oder.id] }) %>
                </p>

              </tr>
            </tbody>
          </table>
        </div>

          <br><%= f.submit '新規登録' %>
        </label>


      <% end %>
    </div>
  </div>
</div>


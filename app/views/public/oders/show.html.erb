<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>注文履歴詳細一覧</h1>
      <h3>注文情報</h3>
      <table class=“table”, display: block>
        <thead>
          <tr>
            <th>
              注文日
            </th>
            <th>
              <%= @oder.created_at.strftime('%Y/%m/%d') %>
            </th>
          </tr>
          <tr>
            <th>
              配送先
            </th>
            <th>
              <%= @oder.delivery_postal %>
              <%= @oder.postal_address %>
              <%= @oder.delivery_name %>
            </th>
          </tr>
          <tr>
            <th>
              支払い方法
            </th>
            <th>
              <%= @oder.billing_amount %>
            </th>
          </tr>
          <tr>
            <th>
              ステータス
            </th>
            <th>
              <%= @oder.status %>
            </th>
          </tr>
        </thead>
      </table>
      <h3>請求情報</h3>
      <table class=“table”, display: block>
        <thead>
          <tr>
            <th>
              商品合計
            </th>
            <th>
              <%= @oder.payment %>円
            </th>
          </tr>
          <tr>
            <th>
              配送料
            </th>
            <th>
              <%= @oder.shipping %>
            </th>
          </tr>
           <tr>
             <th>
               御請求額
             </th>
             <th>
               <%= (@oder.payment + @oder.shipping) %>
             </th>
           </tr>
        </thead>
      </table>
      <h3>注文内容</h3>
      <table class=“table”, display: block>
        <thead>
          <tr>
            <th>
              商品
            </th>
            <th>
              単価（税込）
            </th>
            <th>
              個数
            </th>
            <th>
              小計
            </th>
          </tr>
          <% @oder.oder_items.each do |oder_item| %>
          <tr>
            <th>
              <!--商品名-->
              <%= oder_item.item.name %>
            </th>
            <th>
              <!--単価（税込）-->
              <%= oder_item.item.price %>
            </th>
            <th>
              <!--個数-->
              <%= oder_item.amount %>
            </th>
            <th>
              <!--小計-->
              <%= (oder_item.item.price * oder_item.amount) %>
            </th>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
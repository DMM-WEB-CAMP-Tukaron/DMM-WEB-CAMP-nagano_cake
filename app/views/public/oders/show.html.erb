<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
      <h1>注文履歴詳細一覧</h1>
    </div>
    <div class="row">
        <div class="col-9">
          <h3>注文情報</h3>
          <table class="table table-bordered", display: block>
            <thead>
              <tr>
                <th class="bg-light align-middle">
                  注文日
                </th>
                <th>
                  <%= @oder.created_at.strftime('%Y/%m/%d') %>
                </th>
              </tr>
              <tr>
                <th class="bg-light align-middle">
                  配送先
                </th>
                <th>
                  〒<%= @oder.delivery_postal %><br>
                  <%= @oder.postal_address %><br>
                  <%= @oder.delivery_name %>
                </th>
              </tr>
              <tr>
                <th class="bg-light align-middle">
                  支払い方法
                </th>
                <th>
                  <%= @oder.billing_amount %>
                </th>
              </tr>
              <tr>
                <th class="bg-light align-middle">
                  ステータス
                </th>
                <th>
                  <%= @oder.status %>
                </th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="col-3">
          <h3>請求情報</h3>
          <table class="table table-bordered", display: block>
            <thead>
              <tr>
                <th class="bg-light align-middle">
                  商品合計
                </th>
                <th>
                  <%= (@oder.payment - 800) %>
                </th>
              </tr>
              <tr>
                <th class="bg-light align-middle">
                  配送料
                </th>
                <th>
                  <%= @oder.shipping %>
                </th>
              </tr>
               <tr>
                 <th class="bg-light align-middle">
                   御請求額
                 </th>
                 <th>
                   <%= (@oder.payment) %>
                 </th>
               </tr>
            </thead>
          </table>
        </div>
        <div class="col-10">
        <h3>注文内容</h3>
        <table class="table table-bordered", display: block>
          <thead>
            <tr>
              <th class="bg-light align-middle",style="width:60%">
                商品
              </th>
              <th class="bg-light align-middle",style="width:20%">
                単価（税込）
              </th>
              <th class="bg-light align-middle",style="width:10%">
                個数
              </th>
              <th class="bg-light align-middle",style="width:10%">
                小計
              </th>
            </tr>
            <% @oder.oder_items.each do |oder_item| %>
            <tr>
              <th>
                <!--商品名-->
                <%= oder_item.item.name %>
              </th>
              <th>
                <!--単価（税込）-->
                <%= (oder_item.item.price * 1.1).floor %>
              </th>
              <th>
                <!--個数-->
                <%= oder_item.amount %>
              </th>
              <th>
                <!--小計-->
                <%= (oder_item.item.price * oder_item.amount * 1.1).floor %>
              </th>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
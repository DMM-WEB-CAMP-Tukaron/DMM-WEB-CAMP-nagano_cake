<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品一覧</h1>
      <div class="row">
        <% @items.each do |item| %>
          <table class="col-md-3">
            <tr>
              <td>
                <%= link_to item_path(item.id) do %>
                 <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= item.name %></td>
            </tr>
            <tr>
              <td>¥<%= (item.price * 1.1).floor %>(税込み)</td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>


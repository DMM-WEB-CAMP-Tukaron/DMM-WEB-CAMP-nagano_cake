<div class="container">
  <div class="row m-5 pl-5"><h1 class="bg-light">管理者用TOPページ</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th><%= "購入日時" %></th>
            <th><%= "購入者" %></th>
            <th><%= "注文個数" %></th>
            <th><%= "注文ステータス" %></th>
          </tr>
        </thead>
        <tbody>
          <% @oders.each do |oder| %>
            <% @sum = 0 %>
            <tr>
              <td><%= link_to oder.created_at, admin_oder_path(oder) %></td>
              <td><%= oder.customer.last_name+""+oder.customer.first_name %></td>
              <td><% oder.oder_items.each do |item| %>
                  <% @sum = (@sum+item.amount) %>
                  <% end %>
                  <%= @sum %></td>
              <td><%= oder.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
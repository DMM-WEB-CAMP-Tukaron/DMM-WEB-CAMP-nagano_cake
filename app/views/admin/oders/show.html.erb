
<%= "購入者  :" %>        <%= @oder_detail.customer.last_name+@oder_detail.customer.first_name %><br>
<%= "注文日時　：" %>     <%= @oder_detail.created_at %><br>
<%= "配送先　：" %>       <%= @oder_detail.delivery_postal+" "+@oder_detail.postal_address+" "+@oder_detail.delivery_name %><br>
<%= "支払い方法　："%>    <%= @oder_detail.billing_amount %><br>
<%= form_with model: @oder_detail, url: admin_oder_path(@oder_detail.id), local:true do |f| %>
<%= "注文ステータス　："%><%= f.select :status,Oder.statuses.keys.to_a, {} %>
<%= f.submit %>
<% end %>



<% @oder_detail.oder_items.each do |item| %>
  <%= "商品名　：" %>      <%= item.item.name %>
  <%= "単価(税込み)" %>    <%= (item.item.price*1.1) %>
  <%= "数量" %>            <%= item.amount %>
  <%= "小計" %>            <%= (item.amount*item.item.price*1.1) %>
  <%= form_with model: item, url: admin_oder_detail_path(item.id), local:true do |f| %>
    <%= "制作ステータス" %><%= f.select :making_status,OderItem.making_statuses.keys.to_a, {} %>
    <%= f.submit %>
  <% end %>
<% end %>

<%= "商品合計　：" %><%= (@oder_detail.payment-@oder_detail.shipping) %><%= "円" %><br>
<%= "送料　：" %><%= @oder_detail.shipping %><%= "円" %><br>
<%= "請求額合計　："%><%= @oder_detail.payment %><%= "円" %>
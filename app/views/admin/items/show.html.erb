<div class="container">
  <div class="row">
    <%= attachment_image_tag(@item, :image, :fill, 500, 500) %>
  </div>
  <div class="row">
    <div class="col">
      <table>
          
        <tr><%= "商品名：" %><%= @item.name %></tr><br>

        <tr><%= "商品説明：" %><%= @item.introduction %></tr><br>

        <tr><%= "ジャンル：" %><%= @item.genre.name %></tr><br>

        <tr><%= "税抜価格：" %><%= @item.price %><%= "円" %></tr><br>

        <tr><%= "販売ステータス" %><%= @item.is_active %></tr><br>
    
        <tr><%= link_to '編集する',  edit_admin_item_path(@item.id) %></tr>
        
      </table>
    </div>
  </div>
</div>




